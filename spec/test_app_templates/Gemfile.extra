gem 'jquery-rails'
gem 'puma-rails'

if ENV['RAILS_VERSION']
  case ENV['RAILS_VERSION']
  when /6\.1\./
    gem 'webpacker', '~> 5.0'
  when /6\./
    gem 'webpacker', '~> 4.0'
  when /5\./
    gem 'webpacker', '~> 4.0'
  end
end

if ENV['TEST_BOOTSTRAP'] == "3"
  gem "bootstrap-sass"
else
  # bootstrap 4
  gem "bootstrap", "~> 4.0"
end
